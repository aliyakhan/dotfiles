function mcd
  mkdir $argv[1]
  cd $argv[1]
end

function rf
  mv $argv[1] ~/.Trash
end

function phps
  if count $argv > /dev/null
    php -S 0.0.0.0:$argv[1]
  else
    php -S 0.0.0.0:8080
  end
end

function phpenv
  if count $argv > /dev/null
    set -gx PATH \
		/Applications/MAMP/bin/php/php7.1.1/bin \
                $HOME/.composer/vendor/bin \
                $PATH
  else
    set -gx PATH \
		/Applications/MAMP/bin/php/php7.0.15/bin \
                $HOME/.composer/vendor/bin \
                $PATH
  end
end

function postgres
  set -gx PATH \
                /Applications/Postgres.app/Contents/Versions/latest/bin \
                $PATH
end

function gra
  git remote add $argv[1] $argv[2]
end